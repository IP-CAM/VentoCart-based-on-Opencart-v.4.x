<form id="form-product" method="post" data-oc-toggle="ajax" data-oc-load="{{ action }}" data-oc-target="#product">
  <div class="row" id="product-list">
    {% if products %}
      {% for product in products %}
        <div class="col-12">
          <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start p-3 border-bottom product-row">
            
            <!-- Checkbox (visible at the start) -->
            <div class="me-3 mb-2 mb-sm-0">
              <input type="checkbox" name="selected[]" value="{{ product.product_id }}" class="form-check-input" onclick="toggleCheckbox(this)">
            </div>
            
            <!-- Product details (table-like) -->
            <div class="d-flex flex-column flex-sm-row w-100 justify-content-between align-items-start">
              <!-- Product name and edit link with increased width on larger screens -->
             <div class="product-col product-name mb-2 mb-sm-0" style="flex: 1 1 100%; word-wrap: break-word; overflow-wrap: break-word;">
  <a title="{{ product.name }}" href="{{ product.edit }}" class="text-decoration-none" {% if sort == 'pd.name' %} class="{{ order|lower }}"{% endif %}>
    {{ product.name }}
  </a>
</div>

              
              <!-- Product status -->
              <div class="product-col product-status mb-2 mb-sm-0" style="flex: 1 1 20%;">
                {% if product.status %}
                  <span class="text-success">{{ text_enabled }}</span>
                {% else %}
                  <span class="text-danger">{{ text_disabled }}</span>
                {% endif %}
              </div>

              <!-- Product model -->
              <div class="product-col product-model mb-2 mb-sm-0" style="flex: 1 1 40%;">
                {{ product.model }}
              </div>

              <!-- Price and special price -->
              <div class="product-col product-price mb-2 mb-sm-0" style="flex: 1 1 20%;">
                {% if product.special %}
                  <span style="text-decoration: line-through;">{{ product.price }}</span>
                  <span class="text-danger">{{ product.special }}</span>
                {% else %}
                  {{ product.price }}
                {% endif %}
              </div>

              <!-- Quantity with badges -->
              <div class="product-col product-quantity mb-2 mb-sm-0" style="flex: 1 1 20%;">
                {% if product.quantity <= 0 %}
                  <span class="badge bg-warning">{{ product.quantity }}</span>
                {% elseif product.quantity <= 5 %}
                  <span class="badge bg-danger">{{ product.quantity }}</span>
                {% else %}
                  <span class="badge bg-success">{{ product.quantity }}</span>
                {% endif %}
              </div>
              
              <!-- Edit button -->
              <div class="product-col product-edit">
                <a href="{{ product.edit }}" data-bs-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary">
                  <i class="fas fa-pencil-alt"></i>  
                </a>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    {% else %}
      <div class="col-12 text-center">{{ text_no_results }}</div>
    {% endif %}
  </div>
  
  <!-- Pagination and Results -->
  <div class="row">
    <div class="col-sm-6 text-start">{{ pagination }}</div>
    <div class="col-sm-6 text-end">{{ results }}</div>
  </div>
</form>

<script>
  function toggleCheckbox(checkbox) {
    var card = checkbox.closest('.d-flex');
    if (checkbox.checked) {
      card.classList.add('selected');
    } else {
      card.classList.remove('selected');
    }
  }
</script>
