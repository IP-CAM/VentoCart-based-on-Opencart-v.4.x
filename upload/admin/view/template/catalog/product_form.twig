              <div class="table-responsive">
                
                <table id="product-attribute" class="table table-bordered table-hover">
                  <thead>
                    <tr>
                      <td class="text-start">{{ entry_attribute }}</td>
                      <td class="text-start">{{ entry_text }}</td>
                      <td>
                  
